.row
  .span12
    %h1
      Listing Songs

.row
  .span12

    %table.table.table-striped
      %tr
        %th
          Title
        %th
          Artist
        %th
          Genres
        %th
          Tags
        %th
        %th
        %th

      - @songs.each do |song|
        %tr
          %td
            = song.title
          %td
            = song.artist.name
          %td
            %ul
              - song.genres.each do |g|
                %li
                  g.name
          %td
            %ul
              - song.tags.each do |t|
                %li 
                  = t.value
          %td
            = link_to 'Show', song
          %td
            = link_to 'Edit', edit_song_path(song)
          %td
            = link_to 'Destroy', song, method: :delete, data: { confirm: 'Are you sure?' }
  %br

  = link_to 'New Song', new_song_path
