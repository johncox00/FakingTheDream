= form_for(@tour_date) do |f|
  - if @tour_date.errors.any?
    #error_explanation
      %h2
        = pluralize(@tour_date.errors.count, "error")
        prohibited this tour_date from being saved:
      %ul
        - @tour_date.errors.full_messages.each do |msg|
          %li= msg
  .field
    - if @tour_date.venue
      = f.select :venue_id, options_from_collection_for_select(@venues, "id", "name", @tour_date.venue.id)
    - else
      = f.select :venue_id, options_from_collection_for_select(@venues, "id", "name")
  .field
    = f.label :date_time
    %br/
    = f.datetime_select :date_time
  .field
    = f.label :cover
    %br/
    = f.text_field :cover
  .field
    = f.label :age_restrictions
    %br/
    = f.text_field :age_restrictions
  .field
    = f.label :notes
    %br/
    = f.text_area :notes
  .actions
    = f.submit
